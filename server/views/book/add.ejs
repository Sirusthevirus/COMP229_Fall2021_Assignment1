<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<!--C Content for the Add Page-->

<div class="container">
    <div class="offset-md-2 col-md-8">
    <h1><%- title %></h1>

        <form method="POST" class="form">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id="nameTextField" placeholder="Enter the Book title"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField" placeholder="Enter the Books Author"
                name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                id="publishedTextField" placeholder="Enter the Year of Publication"
                name="published" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control"
                id="descriptionTextArea" placeholder="Enter brief description of the book"
                name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form-control"
                id="priceTextField" placeholder="Enter the Books Price"
                name="price" required>
            </div>

            <button class="btn btn-primary">
                <i class="fas fa-edit"></i>Submit</button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
</div>

  
